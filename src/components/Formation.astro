          <h3 class="text-xl font-semibold text-blue-200 mb-2">DAW</h3>
          <div class="flex items-center gap-2 mb-1">
            <img src="/svg/caledario.svg" alt="Calendario" class="w-5 h-5" />
            <span class="text-blue-400 text-sm">2023-2025</span>
          </div>
          <div class="flex items-center gap-2">
            <img src="/svg/location.svg" alt="Ubicación" class="w-5 h-5" />
            <span class="text-blue-400 text-sm">IES Gran Capitán</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  // Animación para móvil
  const formationAnim = document.getElementById("formation-anim");
  function checkFormationAnim() {
    if (!formationAnim) return;
    const rect = formationAnim.getBoundingClientRect();
    if (rect.top < window.innerHeight - 100 && rect.bottom > 100) {
      formationAnim.classList.remove("opacity-0", "translate-y-8");
      formationAnim.classList.add("opacity-100", "translate-y-0");
    } else {
      formationAnim.classList.remove("opacity-100", "translate-y-0");
      formationAnim.classList.add("opacity-0", "translate-y-8");
    }
  }
  window.addEventListener("scroll", checkFormationAnim);
  window.addEventListener("resize", checkFormationAnim);
  checkFormationAnim();

  // Animación para desktop
  const formationAnimDesktop = document.getElementById("formation-anim-desktop");
  function checkFormationAnimDesktop() {
    if (!formationAnimDesktop) return;
    const rect = formationAnimDesktop.getBoundingClientRect();
    if (rect.top < window.innerHeight - 100 && rect.bottom > 100) {
      formationAnimDesktop.classList.remove("opacity-0", "translate-y-8");
      formationAnimDesktop.classList.add("opacity-100", "translate-y-0");
    } else {
      formationAnimDesktop.classList.remove("opacity-100", "translate-y-0");
      formationAnimDesktop.classList.add("opacity-0", "translate-y-8");
    }
  }
  window.addEventListener("scroll", checkFormationAnimDesktop);
  window.addEventListener("resize", checkFormationAnimDesktop);
  checkFormationAnimDesktop();
</script>
