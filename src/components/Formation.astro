    <!-- Timeline DESKTOP (alternado) -->
    <div
      class="hidden md:grid md:grid-cols-9 gap-y-10 relative opacity-0 translate-y-8 transition-all duration-700"
      id="formation-anim-desktop"
    >
      <!-- Línea central -->
      <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-[3px] bg-gradient-to-b from-blue-500 via-blue-700 to-blue-900 transform -translate-x-1/2 z-0"></div>

      <!-- ITEM 1 -->
