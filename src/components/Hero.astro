  <p
    class="text-lg text-gray-300 max-w-2xl mx-auto sm:text-center"
    data-lang="hero.description"
  >
    Desarrollador en formación con experiencia en entornos de desarrollo web.
    Actualmente he finalizado mi curso de Desarrollo de Aplicaciones Web, con
    interés en el desarrollo de Aplicaciones Multiplataforma y el uso de la IA.
  </p>
  <div class="flex flex-col items-start gap-2 w-full max-w-xl mx-auto sm:items-center">
    <div class="flex justify-center gap-4 flex-wrap">
      <!-- GitHub -->
      <a
        href="https://github.com/josemmp2005"
        class="flex items-center gap-4 p-3 rounded-xl bg-white/10 hover:bg-white/20 transition shadow-lg backdrop-blur w-30 mx-auto"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img src="svg/github.svg" alt="GitHub" class="w-8 h-8" />
        <span class="font-semibold text-lg break-all" data-lang="hero.github"
          >GitHub</span
        >
      </a>
      <!-- LinkedIn -->
      <a
        href="https://www.linkedin.com/in/josé-maría-mayén-pérez-401435351"
        class="flex items-center gap-4 p-3 rounded-xl bg-white/10 hover:bg-white/20 transition shadow-lg backdrop-blur w-30 mx-auto"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img src="svg/linkedin.svg" alt="LinkedIn" class="w-8 h-8" />
        <span class="font-semibold text-lg break-all" data-lang="hero.linkedin"
          >Linkedin</span
        >
      </a>
    </div>
    <div class="flex flex-col items-left sm:flex-row justify-center gap-4 mt-4 w-full flex-wrap">
      <div>
        <!-- Email -->
        <a
          href="mailto:josemayenp@gmail.com"
          class="flex justify-around gap-10 p-3 rounded-xl bg-white/10 hover:bg-white/20 transition shadow-lg backdrop-blur w-full max-w-xs mx-auto mt-2 sm:gap-7 mt-0 ml-0"
        >
          <img src="svg/mail.svg" alt="Email" class="w-8 h-8" />
          <span class="font-semibold text-lg truncate">josemayenp@gmail.com</span>
        </a>
      </div>
      <div>
        <!-- CV -->
        <a
          href="/cv-jmmp.pdf"
          class="inline-flex items-center gap-4 p-3 rounded-xl bg-white/10 hover:bg-white/20 transition shadow-lg backdrop-blur mx-auto mt-2"
        >
          <img src="svg/file.svg" alt="CV" class="w-8 h-8" />
          <span class="font-semibold text-lg break-all" data-lang="hero.cv"
            >CV</span
          >
        </a>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  const heroAnim = document.getElementById("hero-anim");
  
  function checkHeroAnim() {
    const rect = heroAnim.getBoundingClientRect();
    if (rect.top < window.innerHeight - 100 && rect.bottom > 100) {
      heroAnim.classList.remove("opacity-0", "translate-y-8");
      heroAnim.classList.add("opacity-100", "translate-y-0");
    } else {
      heroAnim.classList.remove("opacity-100", "translate-y-0");
      heroAnim.classList.add("opacity-0", "translate-y-8");
    }
  }
  
  // Inicializar después de que cargue la página
  window.addEventListener("DOMContentLoaded", () => {
    // Si el hero ya está visible al cargar la página, mantenerlo visible
    const rect = heroAnim.getBoundingClientRect();
    if (rect.top >= 0 && rect.top < window.innerHeight) {
      heroAnim.classList.add("opacity-100", "translate-y-0");
      heroAnim.classList.remove("opacity-0", "translate-y-8");
    }
    
    // Configurar los listeners para el scroll
    window.addEventListener("scroll", checkHeroAnim);
    window.addEventListener("resize", checkHeroAnim);
  });
</script>
