---
const skills = [
  { name: "HTML", icon: "/svg/html.svg" },
  { name: "CSS", icon: "/svg/css.svg" },
  { name: "JavaScript", icon: "/svg/js.svg" },
  { name: "React", icon: "/svg/react-2.svg" },
  { name: "Python", icon: "/svg/python.svg" },
  { name: "PHP", icon: "/svg/php.svg" },
  { name: "WordPress", icon: "/svg/wordpress-icon.svg" },
  { name: "Astro", icon: "favicon.svg" },
  { name: "MySQL", icon: "/svg/mysql.svg" },
  { name: "PostgreSQL", icon: "/svg/postgresql-icon.svg" },
];
---

<section class="py-12">
  <h2 class="text-3xl font-bold text-center text-white mb-8 tracking-wide">Skills</h2>
  <div class="flex flex-wrap justify-center gap-8">
    {skills.map((skill) => (
      <div class="flex flex-col items-center w-24">
        <img
          src={skill.icon}
          alt={skill.name}
          class="w-20 h-20 hover:scale-110 transition-transform duration-300 drop-shadow-lg bg-white/10 rounded-xl p-2"
          loading="lazy"
        />
        <span class="mt-2 text-white text-sm font-medium text-center">{skill.name}</span>
      </div>
    ))}
  </div>
</section>